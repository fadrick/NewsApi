<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_margin="0dp"
    card_view:cardCornerRadius="15dp"




    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/posters"
            android:layout_width="80dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="12dp"
            android:layout_height="100dp"/>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/posters"

            android:layout_marginBottom="10dp"
            android:layout_below="@+id/posters"
            android:background="@drawable/round_white"
            android:padding="5dp">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/posters"
                android:layout_marginLeft="24dp"

                android:layout_marginTop="0dp"
                android:paddingRight="4dp"
                android:text="Sat , 16 Nov 2019"
                android:textColor="#222"
                android:textSize="12sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:src="@drawable/ic_today_black_24dp" />

        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/posters"
            android:text="Share"
            android:textSize="14sp"
            android:textColor="#222"
            android:drawableLeft="@drawable/ic_share_black_24dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:id="@+id/share"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="2dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="8dp"
            android:orientation="vertical"

            android:layout_toRightOf="@+id/posters"
            >

            <TextView
                android:id="@+id/text"
                android:ellipsize="end"
                android:textColor="#222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:text="Title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="	#696969"
                android:layout_marginLeft="1dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="14sp"
                android:id="@+id/desc"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/poster"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="2dp"
                    android:text="Dawn News"
                    android:textColor="#222"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:id="@+id/rating"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:id="@+id/hours"
                    android:textColor="#222"
                    android:layout_marginTop="12dp"
                    android:text=" 5 hours ago"

                    />


            </LinearLayout>


            />



        </LinearLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>


